@model beerOfThings.ViewModels.IngredientDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Ingredient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ingredient.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ingredient.Name)
        </dd>
    </dl>
</div>
<hr />
<h3>Receptury które zawierają składnik:</h3>
<table>
    @foreach (Recipe recipe in Model.recipes)
    {
    <tr>
        <td>@recipe.Name</td>
        <td><a href="/Recipe/Details/@recipe.Id">Przejdź do receptury</a></td>
    </tr>
    }
</table>
<div></div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ingredient.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
