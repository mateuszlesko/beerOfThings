@model beerOfThings.ViewModels.RecipeIngredientVM

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj składnik do receptury</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddIngredientToRecipe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IngredientId" class="control-label"></label>
                <select asp-for="IngredientId">
                    @foreach (Ingredient ingredient in Model.GetIngredientsList())
                    {
                        <option value="@ingredient.Id">@ingredient.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Amount">Ilość:</label>
                <input asp-for="Amount" type="number" step="0.1" min="0" max="5000" placeholder="Podaj ilość" />
            </div>

            <div class="form-group">
                <label asp-for="Entity" class="control-label"></label>
                <select asp-for="Entity">
                    @foreach (string entity in Model.GetEntities())
                    {
                        <option value="@entity">@entity</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="AddIngredientToRecipe" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

